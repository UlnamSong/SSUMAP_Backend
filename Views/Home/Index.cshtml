@{
    ViewData["Title"] = "관리자 로그인";
}

<div class="container" style="margin-top: 80px;">
    <label class="col-xs-12 control-label" style="font-weight:lighter; font-size:30px;margin-bottom:20px;">관리자 페이지 로그인하세요.</label>
    <form class="form-horizontal" method="post">
        <input type="hidden" name="provider" value="self"/>
        <div class="form-group">
            <label class="col-xs-2 control-label">
                아이디
            </label>
            <div class="col-xs-4">
                <input type="text" name="id" placeholder="Admin Id" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-2 control-label">
                비밀번호
            </label>
            <div class="col-xs-4">
                <input type="password" name="password" placeholder="Password" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-4 col-xs-offset-2" style="margin-bottom: 50px;">
                <input type="submit" value="로그인" class="btn btn-success"/>
            </div>
        </div>
    </form>
</div>